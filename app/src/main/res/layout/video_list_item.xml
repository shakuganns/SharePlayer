<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="122dp"
    android:layout_marginBottom="16dp"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="122dp">

        <ImageView
            android:id="@+id/video_image"
            android:layout_width="120dp"
            android:layout_height="90dp" />

        <TextView
            android:maxLines="3"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_name"
            android:text="My Heart Will Go On"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/video_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:00"
            android:id="@+id/time_size"
            android:layout_alignBottom="@+id/video_image"
            android:layout_alignLeft="@+id/video_name"
            android:layout_alignStart="@+id/video_name" />


    </RelativeLayout>

</android.support.v7.widget.CardView>